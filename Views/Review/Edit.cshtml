@model ReviewViewModel

<div class="bg-light pt-5" style="height:90vh">
    <div style="max-width: 700px; margin: auto;">
        <div class="container text-center my-5">
            <h4>Review</h4>
            <div class="row my-4">

                <div class="col-md-12">
                    <form asp-action="AddReview">
                        <input type="hidden" asp-for="@Model.ReviewID" />
                        <input type="hidden" asp-for="@Model.RecipeID" />
                        <div class="form-group">
                            <span class="rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    var starClass = "star hand";
                                    if (Model.Review?.Stars == 6 - i)
                                    {
                                        starClass += " active";
                                    }
                                    <span data-value="@(6 - i)" class="@starClass" id="@i"></span>
                                }
                            </span>
                            <input type="hidden" asp-for="Review.Stars" /><br />
                            <small><span class="text-danger" asp-validation-for="@Model.Review.Stars"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Review.Description" class="control-label"></label>
                            <input asp-for="@Model.Review.Description" class="form-control" />
                            <small><span class="text-danger" asp-validation-for="@Model.Review.Description"></span></small>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>