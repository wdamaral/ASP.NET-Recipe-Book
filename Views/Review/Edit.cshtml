@model ReviewViewModel

<div class="container text-center my-5">
    <h4>Review</h4>
    <div class="row my-4">

        <div class="col-md-12">
            <form asp-action="AddReview">
                    <input type="hidden" asp-for="@Model.Review.ReviewID" />
                    <input type="hidden" asp-for="@Model.RecipeID" />
                    <div class="form-group">
                        <span class="rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                var starClass = "star";
                                if (Model.Review?.Stars == 6 - i)
                                {
                                    starClass += " active";
                                }
                                <span data-value="@(6 - i)" class="@starClass" id="@i"></span>
                            }
                        </span>
                        <input type="hidden" asp-for="Review.Stars" />
                        <small><span class="text-danger" asp-validation-for="@Model.Review.Stars"></span></small>
                    </div>
                <div class="form-group">
                    <label asp-for="@Model.Review.Description" class="control-label"></label>
                    <input asp-for="@Model.Review.Description" class="form-control" />
                    <span asp-validation-for="@Model.Review.Description" class="text-danger"></span>
                    <small><span class="text-danger" asp-validation-for="@Model.Review.Description"></span></small>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>