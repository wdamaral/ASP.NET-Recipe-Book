@model Recipe
@{
    ViewBag.Title = "Display page";
}

@if (Model == null)
{
    <div class="container text-center my-5">
        <h2>No recipe selected</h2>
    </div>
}
else
{
    <div class="container text-center my-5">
        <h1 class="py-3">
            @Model?.RecipeName
        </h1>
        <p>
            <span class="rating">
                @for (int i = 1; i <= 5; i++)
                {
                    var starClass = "star";
                    if (Model.Rating == 6 - i)
                    {
                        starClass += " active";
                    }
                    <span data-value="@(6 - i)" class="@starClass"></span>
                }
            </span>
        </p>
        <div class="row">
            <div class="col-12">
                <div class="card align-text-top">
                    <div class="buttons btn-group">
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-RecipeID="@Model.RecipeID">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-RecipeID="@Model.RecipeID">Delete</a>
                    </div>
                    <img class="card-img-top" src="@Model?.PictureUrl" alt="@Model?.RecipeName">
                    <div class="card-body">
                        <h5>@Model?.Description</h5>
                        <h6 class="text-left">Ingredients</h6>
                        <p class="card-text text-left">
                            @Model?.Ingredients
                        </p>
                        <h6 class="text-left">Instructions</h6>
                        <p class="card-text text-left">
                            @Model?.PrepareMode
                        </p>
                    </div>
                    <div class="card-footer">
                        <p class="text-muted text-left">
                            @Model?.TimeToPrepare minutes
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-12 text-center">
                <h3>Reviews</h3>
            </div>

            <table class="table table-striped">
                <tbody>
                    @if(Model.Reviews.Count == 0)
                    {
                    <tr>
                        <td colspan="2">No reviews were added.</td>
                    </tr>
                    }
                    else
                    { 
                    foreach (Review review in Model.Reviews)
                    {

                        <tr>
                            <td>
                                <span class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var starClass = "star";
                                        if (review.Stars == 6 - i)
                                        {
                                            starClass += " active";
                                        }
                                        <span data-value="@(6 - i)" class="@starClass"></span>
                                    }
                                </span>
                            </td>
                            <td class="text-left">@review.Description</td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
</div>

}
